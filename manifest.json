{
  "manifest_version": 3,
  "name": "Translate Extension MisjahGPT",
  "version": "1.2",
  "description": "Translate selected text on right-click",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js"
  }
}

